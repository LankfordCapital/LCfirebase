
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**",
      "**/public/**",
      "**/scripts/**",
      "**/docs/**",
      "**/*.md",
      "**/tsconfig.json",
      "**/tailwind.config.ts",
      "**/postcss.config.mjs",
      "**/components.json",
      "**/next-env.d.ts",
      "**/tsconfig.tsbuildinfo"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "redirects": [
      {
        "source": "https://www.lankfordcapital.com/**",
        "destination": "https://lankfordcapital.com/:splat",
        "type": 301
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "apphosting": {
    "backend": {
      "source": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/docs/**",
        "**/*.md",
        "**/scripts/**"
      ]
    }
  }
}
