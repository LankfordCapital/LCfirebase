rules_version = '2';

// Firebase Storage Security Rules for Lankford Capital
// Ensures proper permissions for document uploads across all user roles
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================================================
    // USER-SPECIFIC DOCUMENT FOLDERS
    // ============================================================================
    
    // Profile photos - users can only access their own
    match /profile-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General documents - users can only access their own
    match /documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Loan application documents - users can only access their own
    match /loan-applications/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================================================
    // BROKER DOCUMENTS
    // ============================================================================
    
    // Brokers can upload and manage their own documents
match /broker-documents/{brokerId}/{allPaths=**} {
  allow write: if request.auth != null && request.auth.uid == brokerId;
  // Allow workforce and admin to read broker documents
  allow read: if request.auth != null && 
    exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
    get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['workforce', 'admin'];
}
    
    // ============================================================================
    // BORROWER DOCUMENTS
    // ============================================================================
    
    // Borrowers can upload their own documents
    match /borrower-documents/{borrowerId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == borrowerId;
      // Brokers, workforce, and admin can read borrower documents
      allow read: if request.auth != null && 
        exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['broker', 'workforce', 'admin'];
      // Allow public read for uploaded documents (needed for direct URLs)
      allow read: if true;
    }
    
    // ============================================================================
    // WORKFORCE DOCUMENTS
    // ============================================================================
    
    // Workforce documents - only workforce and admin can access
    match /workforce-documents/{workforceId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == workforceId;
      allow read, write: if request.auth != null && 
        exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin'];
    }
    
    // ============================================================================
    // ADMIN OVERRIDE
    // ============================================================================
    
    // Admin and workforce have full access to all documents
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
        exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['workforce', 'admin'];
    }
  }
}
